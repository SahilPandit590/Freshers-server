<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>Freshers Gallery - Login</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Mobile Optimization -->
  <meta name="theme-color" content="#0d6efd">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

  <style>
    :root {
      --input-height: 50px;
    }
    @media (max-width: 576px) {
      :root { --input-height: 48px; }
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      -webkit-font-smoothing: antialiased;
      touch-action: manipulation;
    }

    .login-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
      padding: 2.5rem;
      max-width: 400px;
      width: 90%;
      animation: fadeIn 0.6s ease-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .form-control {
      height: var(--input-height);
      border-radius: 12px;
      border: 1.5px solid #ddd;
      font-size: 1rem;
      padding: 0 1rem;
      transition: all 0.3s ease;
    }
    .form-control:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
    }

    .btn-login {
      height: var(--input-height);
      border-radius: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 1rem;
      background: linear-gradient(135deg, #0d6efd, #0d6ee0);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-login:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
    }
    .btn-login:active {
      transform: translateY(0);
    }

    .info-text {
      font-size: 0.85rem;
      color: #666;
      line-height: 1.5;
    }

    .logo {
      width: 80px;
      height: 80px;
      background: #0d6efd;
      border-radius: 50%;
      margin: 0 auto 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
      font-weight: bold;
    }

    /* Prevent iOS zoom on input */
    input, select, textarea {
      font-size: 16px !important;
    }
  </style>
</head>
<body>

  <div class="login-card">
    <!-- Optional Logo -->
    <div class="logo">FG</div>

    <h2 class="mb-4 text-center text-primary">Image Gallery Access</h2>

    <form method="POST" action="/auth" class="needs-validation" novalidate>
      <div class="mb-3">
        <input 
          type="text" 
          name="roll_number" 
          class="form-control" 
          placeholder="Roll Number (e.g. 2023001)" 
          required 
          autocomplete="off"
        />
        <div class="invalid-feedback">Please enter your roll number.</div>
      </div>

      <div class="mb-4">
        <input 
          type="email" 
          name="email" 
          class="form-control" 
          placeholder="Your Email" 
          required 
          autocomplete="off"
        />
        <div class="invalid-feedback">Please enter a valid email.</div>
      </div>

      <button type="submit" class="btn btn-primary btn-login w-100">
        Register & Login
      </button>
    </form>

    <p class="info-text text-center mt-4">
      <strong>First time?</strong> Just enter and register.<br>
      <strong>Already registered?</strong> Use same details to login.
    </p>
  </div>

  <!-- Bootstrap + Form Validation -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Bootstrap form validation
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>
</body>
</html>